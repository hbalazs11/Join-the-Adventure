    <Room id="Sun" activeAtStart="true" descTextId="sunDescTxt" imgSrc="sun.jpg" nameTextId="sunNameTxt">
      <MenuItems>
        <MenuItem id="shieldsFailMI" activeAtStart="true" menuTextId="shieldsOnMINameTxt">
